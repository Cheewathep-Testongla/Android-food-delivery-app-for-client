<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Basket_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background"
    tools:context=".Basket">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_basket_menu"
        android:layout_width="wrap_content"
        android:layout_height="642dp"
        android:layout_alignTop="@+id/Basket"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="41dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="99dp"
        android:background="@drawable/choosedrink_background"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/Basket"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="10sp"
        android:background="@drawable/background_head"
        android:fontFamily="@font/fc_galaxy_italic"
        android:gravity="center"
        android:text="ตะกร้าสินค้า"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TotalPrice"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/fc_galaxy_regular"
        android:gravity="center_horizontal"
        android:paddingVertical="15dp"
        android:text="ราคารวม = "
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ConfirmedBtn_basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="275dp"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="680dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="-30dp"
        android:layout_marginBottom="113dp"
        android:background="@color/white"
        android:fontFamily="@font/fc_galaxy_regular"
        android:outlineAmbientShadowColor="@color/black"
        android:text="สั่งซื้อ"
        android:textSize="24sp" />

</RelativeLayout>