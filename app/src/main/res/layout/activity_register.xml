<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background"
    tools:context=".registerActivity"
    >

    <ImageView
        android:id="@+id/applogo_re"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="-65dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/plzregis"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/applogo_re"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="-15dp"
        android:layout_marginEnd="59dp"
        android:fontFamily="@font/fc_galaxy_regular"
        android:text="สมัครสมาชิก"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/input_user_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plzregis"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:fontFamily="@font/fc_galaxy_regular"
        android:gravity="center"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="#88000000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/input_pass_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_user_regis"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:fontFamily="@font/fc_galaxy_regular"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#88000000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/input_cpass_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_pass_regis"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:fontFamily="@font/fc_galaxy_regular"
        android:gravity="center"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#88000000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/input_phone_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_cpass_regis"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:fontFamily="@font/fc_galaxy_regular"
        android:gravity="center"
        android:hint="Phone Number"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="#88000000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/input_email_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_phone_regis"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:fontFamily="@font/fc_galaxy_regular"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="#88000000"
        android:textSize="25dp" />

    <Button
        android:id="@+id/comfirm_regis"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_email_regis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        android:background="#00FFFFFF"
        android:fontFamily="@font/fc_galaxy_regular"
        android:padding="20dp"
        android:text="ยืนยัน"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="34dp"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/backregister"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comfirm_regis"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"

        android:background="#00FFFFFF"
        android:fontFamily="@font/fc_galaxy_regular"
        android:padding="20dp"
        android:text="ย้อนกลับ"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="34dp"
        app:strokeWidth="5dp" />

</RelativeLayout>