<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background"
    >

    <ImageView
        android:id="@+id/applogo"
        android:layout_width="347dp"
        android:layout_height="133dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-13dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/plzlogin"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_below="@+id/applogo"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="62dp"
        android:fontFamily="@font/fc_galaxy_regular1"
        android:text="ลงชื่อเข้าใช้"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/forgotpsw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_password"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/fc_galaxy_regular1"
        android:text="ลืมรหัสผ่าน"

        android:textColor="@color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/comfirm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_password"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="100dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/fc_galaxy_regular"
        android:padding="20dp"
        android:text="ยืนยัน"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="36dp"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/register"
        android:layout_width="150dp"

        android:layout_height="wrap_content"
        android:layout_below="@+id/comfirm"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/fc_galaxy_regular"
        android:padding="20dp"
        android:text="ลงทะเบียน"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="36dp"
        app:strokeWidth="5dp" />

    <EditText
        android:id="@+id/input_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plzlogin"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="25dp"
        android:fontFamily="@font/fc_galaxy_regular"

        android:gravity="center"
        android:hint="Email"
        android:inputType="textEmailAddress"

        android:textColor="@color/black"
        android:textColorHint="#88000000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_user"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:ems="10"
        android:fontFamily="@font/fc_galaxy_regular"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#88000000"
        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_password"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/rememberme_chk"
            style="@style/Material.Drawable.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"

            android:fontFamily="@font/fc_galaxy_regular"
            android:gravity="center_vertical"
            android:text="Remember me"
            android:textColor="@color/black"
            android:textColorLink="#FFFFFF"
            android:textSize="30sp" />


    </LinearLayout>


</RelativeLayout>